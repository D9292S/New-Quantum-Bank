# Required Settings
BOT_TOKEN=your_discord_bot_token_here
MONGO_URI=mongodb://username:password@host:port/dbname

# Alternative MongoDB Configuration (used if MONGO_URI is not provided)
MONGO_USER=username
MONGO_PASS=password
MONGO_HOST=host:port/dbname

# Bot Configuration
ACTIVITY_STATUS=Quantum Bank | /help
DEBUG=false  # Set to true for debug mode

# Optional API Keys
MAL_CLIENT_ID=your_myanimelist_client_id  # Used for anime commands

# DevCycle Configuration
# Get your server SDK key from: https://app.devcycle.com/ → Settings → Environments → Server Key
# Format should be: dvc_server_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx_xxxxxxx
DEVCYCLE_SERVER_SDK_KEY=dvc_server_your_key_here  # Required for feature flags

# Performance Settings (defaults to "medium" if not specified)
# Options: "low", "medium", "high"
PERFORMANCE_MODE=medium

# Sharding Configuration
SHARD_COUNT=1  # Number of shards (recommended: 1 per 1000-1500 guilds)

# Clustering Configuration
# Only needed if running multiple instances of the bot
CLUSTER_ID=0    # ID of this cluster (0-based index)
TOTAL_CLUSTERS=1  # Total number of clusters running

# Logging Configuration
LOG_LEVEL=normal  # Options: quiet, normal, verbose, debug
